<% @issues.each do |issue| %>
	<div class="row">
		<div class="col-md-12">
		    <h2>
		      <%= issue.title %>
		      <%= link_to issue_path(issue) do %>
		      	<i class="fa fa-question-circle"></i>
		      <% end %>
		    </h2>
	    </div>
    </div>
	<div class="row">
		<% issue.choices.each do |choice| %>
			<div class="col-md-3 choice">
				<%= choice.image_url %>
				<%= choice.title %>
          	</div>
		<% end %>
   	</div>
<% end %>

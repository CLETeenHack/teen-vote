<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Issue type</th>
      <th>Voting open time</th>
      <th>Voting closed time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.description %></td>
        <td><%= issue.issue_type_id %></td>
        <td><%= issue.voting_open_time %></td>
        <td><%= issue.voting_closed_time %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_admin_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_admin_issue_path %>
